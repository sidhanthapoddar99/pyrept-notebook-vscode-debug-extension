{
  "name": "debug-notebook",
  "displayName": "Debug Notebook",
  "description": "Notebook interface using debug console as execution engine",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Notebooks"
  ],
  "activationEvents": [
    "onNotebook:debug-notebook",
    "onCommand:debugNotebook.newNotebook",
    "onCommand:debugNotebook.runCell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "notebooks": [
      {
        "type": "debug-notebook",
        "displayName": "Debug Notebook",
        "selector": [
          {
            "filenamePattern": "*.dnb"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "debugNotebook.newNotebook",
        "title": "New Debug Notebook",
        "category": "Debug Notebook"
      },
      {
        "command": "debugNotebook.runCell",
        "title": "Run Cell",
        "category": "Debug Notebook"
      },
      {
        "command": "debugNotebook.openWithActiveSession",
        "title": "Open Debug Notebook with Active Session",
        "category": "Debug Notebook"
      }
    ],
    "configuration": {
      "title": "Debug Notebook",
      "properties": {
        "debugNotebook.defaultLanguage": {
          "type": "string",
          "default": "python",
          "enum": ["python", "javascript"],
          "description": "Default language for new notebooks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.26.0",
    "typescript": "^5.2.2"
  }
}